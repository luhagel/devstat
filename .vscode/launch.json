    "version": "0.2.0",
    "configurations": [
        {
            "name": "Meteor Attach",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
      
            "processId": "${command:PickProcess}",
            "smartStep": true,
            "trace": false,
            "restart": true,
      
            "timeout": 20000,
            "sourceMaps": true,
            "outFiles": [
              "${workspaceRoot}/.meteor/local/build/programs/web.browser/app/app.js",
              "${workspaceRoot}/.meteor/local/build/programs/server/app/app.js"
            ]
        }
    ]
}